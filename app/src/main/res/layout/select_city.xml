<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#2B2B2B"
        android:id="@+id/city_bar">
        <TextView
            android:id="@+id/title_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="当前城市：北京"
            android:textColor="#ffffffff"
            android:textSize="20.0dip" />

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_action_bar_back_normal" />
        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/title_back"
            android:background="#ffffff"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"
        />

    <EditText
        android:layout_below="@id/city_bar"
        android:id="@+id/search_edit"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:hint="搜索全国城市（支持中文 / 拼音）"
        android:layout_margin="10.0dip"
        android:drawableLeft="@drawable/magnifying_glass"
        android:drawablePadding="8.0dip"
        android:paddingBottom="4.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="30.0dip"
        android:paddingTop="4.0dip"
        android:singleLine="true"
        android:background="@drawable/contact_search_box_edittext_keyword_background"
        android:textColor="#ff000000"
        android:textColorHint="#ffcccccc"
        android:textSize="15.0sp"
        android:nextFocusUp="@id/search_edit"
        android:nextFocusLeft="@id/search_edit"
        >

    </EditText>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/city_list"
        android:layout_below="@id/search_edit">

    </ListView>

</RelativeLayout>
